{
    "private": true,
    "name": "@dao-xyz/peerbit-examples",
    "author": "dao.xyz",
    "repository": "https://github.com/@dao-xyz/peerbit-node",
    "license": "Apache-2.0",
    "type": "module",
    "workspaces": {
        "packages": [
            "packages/react-utils",
            "packages/network-utils",
            "packages/browser-chat/*",
            "packages/file-share/*",
            "packages/live-streaming/*",
            "packages/live-streaming-canvas/*",
            "packages/name-service/*",
            "packages/canvas/*",
            "packages/one-chat-room/*",
            "packages/collaborative-learning/*"
        ],
        "nohoist": [
            "**/@babel/preset-env",
            "**/@babel/preset-env/**",
            "**/babel-loader",
            "**/babel-loader/**",
            "**/webpack",
            "**/webpack/**"
        ]
    },
    "engines": {
        "node": ">=16.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "lerna run clean",
        "build": "lerna run build --reject-cycles",
        "build-node": "cd ./packages/node/ && yarn build",
        "pub": "lerna publish --no-private",
        "test": "node --experimental-vm-modules ./node_modules/.bin/jest test -c jest.config.unit.ts ",
        "test:integration": "node --experimental-vm-modules ./node_modules/.bin/jest test -c jest.config.integration.ts --forceExit  --detectOpenHandles",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
        "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json,vue}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "nuke": "shx rm -rf {.,packages/*/*}/{node_modules,yarn.lock}"
    },
    "dependencies": {
        "peerbit": "^1.1.5",
        "@peerbit/document": "^1.1.8",
        "@peerbit/test-utils": "^1.0.12"
    },
    "devDependencies": {
        "@types/eslint": "^8.40.2",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^17.0.32",
        "@types/prettier": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-config-react-app": "^7.0.1",
        "gh-pages": "^4.0.0",
        "jest": "^29.5.0",
        "jest-extended": "^4.0.0",
        "lerna": "^5.5.1",
        "prettier": "^2.7.1",
        "shx": "^0.3.4",
        "start-server-and-test": "^1.14.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3",
        "typescript-esm": "^2.0.0",
        "json": "^11.0.0"
    }
}
