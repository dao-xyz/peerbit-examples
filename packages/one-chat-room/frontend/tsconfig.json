{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "Es2022"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "es2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__tests__"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}